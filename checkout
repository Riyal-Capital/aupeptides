<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout | AU Peptides</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-50 text-gray-800 font-sans" x-data="checkout()">

    <div class="max-w-4xl mx-auto px-4 py-10">
        <h1 class="text-3xl font-bold text-blue-900 mb-8">Secure Checkout</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-4">Shipping Details</h2>
                <form @submit.prevent="submitOrder">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Email Address</label>
                            <input type="email" x-model="form.email" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                            <p class="text-xs text-gray-500 mt-1">Payment instructions will be sent here.</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Full Name</label>
                            <input type="text" x-model="form.name" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Address</label>
                            <input type="text" x-model="form.address" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">City</label>
                                <input type="text" x-model="form.city" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Postcode</label>
                                <input type="text" x-model="form.postcode" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
                        <h3 class="font-bold text-yellow-800 text-sm mb-2">Payment Method: Cryptocurrency</h3>
                        <p class="text-xs text-yellow-700 mb-2">
                            We accept <strong>Bitcoin (BTC)</strong> and <strong>USDT</strong>.
                        </p>
                        <p class="text-xs text-yellow-700">
                            Once you place the order, our system will automatically email you the wallet address and total amount. Your order ships immediately after blockchain confirmation.
                        </p>
                    </div>

                    <button type="submit" :disabled="loading || cart.length === 0" class="mt-6 w-full bg-blue-900 hover:bg-blue-800 text-white font-bold py-3 rounded transition flex justify-center items-center">
                        <span x-show="!loading">PLACE ORDER - PAY WITH CRYPTO</span>
                        <span x-show="loading">Processing...</span>
                    </button>
                </form>
            </div>

            <div class="bg-gray-100 p-6 rounded-lg h-fit">
                <h2 class="text-xl font-semibold mb-4">Order Summary</h2>
                <ul class="divide-y divide-gray-300 mb-4">
                    <template x-for="item in cart" :key="item.id">
                        <li class="py-3 flex justify-between text-sm">
                            <span><span x-text="item.name"></span> <span class="text-gray-500" x-text="'(' + item.strength + ')'"></span></span>
                            <span class="font-medium" x-text="'$' + item.price.toFixed(2)"></span>
                        </li>
                    </template>
                </ul>
                <div class="border-t border-gray-300 pt-4 flex justify-between text-xl font-bold">
                    <span>Total</span>
                    <span x-text="'$' + cartTotal.toFixed(2)"></span>
                </div>
            </div>
        </div>
    </div>

    <script>
        function checkout() {
            return {
                cart: JSON.parse(localStorage.getItem('cart')) || [],
                loading: false,
                form: { email: '', name: '', address: '', city: '', postcode: '' },
                
                get cartTotal() { return this.cart.reduce((sum, item) => sum + item.price, 0); },
                
                async submitOrder() {
                    this.loading = true;
                    
                    // THIS IS WHERE YOU CONNECT TO YOUR PYTHON BACKEND
                    // Example: const response = await fetch('YOUR_API_GATEWAY_URL', { ... });
                    
                    // Simulating delay for demo
                    setTimeout(() => {
                        alert(`Order Received!\n\nWe have sent an email to ${this.form.email} with the Bitcoin address to pay $${this.cartTotal.toFixed(2)}.\n\nPlease check your spam folder.`);
                        localStorage.removeItem('cart'); // Clear cart
                        window.location.href = 'index.html';
                    }, 2000);
                }
            }
        }
    </script>
</body>
</html>
