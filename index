                    <div class="flex justify-between text-base font-medium text-gray-900 mb-4">
                        <p>Subtotal</p>
                        <p x-text="'$' + cartTotal.toFixed(2)"></p>
                    </div>
                    <a href="checkout.html" class="flex items-center justify-center rounded-md border border-transparent bg-blue-900 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-blue-800 w-full">Proceed to Checkout</a>
                </div>
