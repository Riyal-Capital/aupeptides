    <div x-show="cartOpen" class="relative z-50" x-cloak>
        <div class="fixed inset-0 bg-black/50" @click="cartOpen = false"></div>
        <div class="fixed inset-y-0 right-0 flex max-w-full pl-10">
            <div class="w-screen max-w-md bg-white shadow-xl flex flex-col">
                <div class="flex-1 overflow-y-auto p-6">
                    <div class="flex items-start justify-between mb-6">
                        <h2 class="text-lg font-medium text-gray-900">Shopping Cart</h2>
                        <button @click="cartOpen = false" class="text-gray-400 hover:text-gray-500">Close</button>
                    </div>
                    <ul class="divide-y divide-gray-200">
                        <template x-for="(item, index) in cart" :key="index">
                            <li class="py-4 flex">
                                <div class="ml-4 flex-1">
                                    <div class="flex justify-between text-base font-medium text-gray-900">
                                        <h3 x-text="item.name"></h3>
