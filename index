                                    <button @click="removeFromCart(index)" class="text-sm font-medium text-red-600 hover:text-red-500 mt-2">Remove</button>
                                </div>
                            </li>
                        </template>
                    </ul>
                    <div x-show="cart.length === 0" class="text-center py-10 text-gray-500">Cart is empty</div>
