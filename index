    <script>
        function shop() {
            return {
                cartOpen: false,
                cart: JSON.parse(localStorage.getItem('cart')) || [],
                products: [
                    { id: 1, code: 'SM05', name: 'Semaglutide', strength: '5mg', price: 22.00, janoshik: false, desc: 'GLP-1 Agonist' },
                    { id: 2, code: 'SM10', name: 'Semaglutide', strength: '10mg', price: 28.50, janoshik: false, desc: 'GLP-1 Agonist' },
                    { id: 3, code: 'TR10', name: 'Tirzepatide', strength: '10mg', price: 31.50, janoshik: true, desc: 'Dual Agonist' },
                    { id: 4, code: 'TR15', name: 'Tirzepatide', strength: '15mg', price: 41.00, janoshik: false, desc: 'Dual Agonist' },
                    { id: 5, code: 'TR30', name: 'Tirzepatide', strength: '30mg', price: 59.50, janoshik: true, desc: 'Dual Agonist' },
                    { id: 6, code: 'RT10', name: 'Retatrutide', strength: '10mg', price: 50.00, janoshik: false, desc: 'Triple Agonist' },
                    { id: 7, code: 'BC5', name: 'BPC-157', strength: '5mg', price: 25.00, janoshik: false, desc: 'Healing Peptide' },
                    { id: 8, code: 'BC10', name: 'BPC-157', strength: '10mg', price: 44.00, janoshik: true, desc: 'Healing Peptide' },
                    { id: 9, code: 'BT5', name: 'TB-500', strength: '5mg', price: 47.00, janoshik: false, desc: 'Healing Peptide' },
                    { id: 10, code: 'BB10', name: 'BPC/TB Blend', strength: '10mg', price: 60.00, janoshik: false, desc: '5mg BPC + 5mg TB' },
                    { id: 11, code: 'H10', name: 'HGH', strength: '10iu', price: 31.50, janoshik: false, desc: 'Somatropin' },
                    { id: 12, code: 'MT10', name: 'Melanotan 2', strength: '10mg', price: 28.50, janoshik: false, desc: 'Tanning' },
                    { id: 13, code: 'BA10', name: 'Bac Water', strength: '10ml', price: 6.50, janoshik: false, desc: 'Reconstitution' }
                ],
                get cartTotal() { return this.cart.reduce((sum, item) => sum + item.price, 0); },
                addToCart(p) { this.cart.push(p); this.saveCart(); this.cartOpen = true; },
                removeFromCart(i) { this.cart.splice(i, 1); this.saveCart(); },
                saveCart() { localStorage.setItem('cart', JSON.stringify(this.cart)); }
            }
        }
    </script>
